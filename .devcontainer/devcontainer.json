// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"build": {
		// Path is relative to the devcontainer.json file.
		"dockerfile": "Dockerfile",
		"context": "..",
		"args": {
			"VARIANT": "3.12"
		}
	},
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.debugpy",
				"ms-python.vscode-pylance",
				"streetsidesoftware.code-spell-checker",
				"CircleCI.circleci",
				"GitHub.copilot",
				"eamodio.gitlens",
				"ms-python.black-formatter",
				"ms-python.flake8",
				"ms-vscode-remote.remote-containers",
				"ms-python.isort",
				"ms-python.autopep8"
			],
			"settings": {
				"terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.profiles.linux": {
					"zsh": {
						"path": "/bin/zsh"
					}
				},
				"editor.formatOnSave": true, // Enable format on save
				"python.formatting.provider": "autopep8", // Set autopep8 as the formatter
				"python.formatting.autopep8Args": [
					"--max-line-length=100"
				] // Optional: Configure autopep8 arguments
			}
		}
	},
	"postCreateCommand": "pip3 install --user -r requirements.txt && python setup.py build_ext",
}