// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"build": {
		// Path in "build" is relative to the devcontainer.json file.
		"dockerfile": "Dockerfile",
		"context": "..",
		"args": {
			"VARIANT": "3.12"
		}
	},
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.debugpy",
				"ms-python.vscode-pylance",
				"streetsidesoftware.code-spell-checker",
				"ms-toolsai.jupyter",
				"CircleCI.circleci",
				"GitHub.copilot",
				"ms-azuretools.vscode-docker"
			],
			"settings": {
				"terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.profiles.linux": {
					"zsh": {
						"path": "/bin/zsh"
					}
				}
			}
		}
	},
	// Make sure to open a terminal after the command below has run. Otherwise, python packages will not be installed, and the "designer" command will be linked to the FSL's "designer" command.
	// Development setup using lockfile for production parity:
	// 1. Install exact versions from requirements.txt (same as production)
	// 2. Install package in editable mode with --no-deps (dependencies already installed)
	// 3. Install test dependencies with constraints from requirements.txt
	"postCreateCommand": "pip install -r requirements.txt && pip install -e '.[dev]' && pip install -r tests/requirements_test.txt -c requirements.txt"
}
