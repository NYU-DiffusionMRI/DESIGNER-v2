// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"build": {
		// Path is relative to the devcontainer.json file.
		"dockerfile": "Dockerfile",
		"context": "..",
		"args": {
			"VARIANT": "3.12"
		}
	},
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.debugpy",
				"ms-python.vscode-pylance",
				"streetsidesoftware.code-spell-checker",
				"ms-toolsai.jupyter",
				"CircleCI.circleci",
				"GitHub.copilot"
			],
			"settings": {
				"terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.profiles.linux": {
					"zsh": {
						"path": "/bin/zsh"
					}
				}
			}
		}
	},
	// while this leave the code editable for instant feedback, it's important to note that the terminal session reflects these changes when running our 'designer' command
	// otherwise, 'designer' command will be linked to the 'fsl designer' package
	"postCreateCommand": "pip install -e . && pip install -r tests/test_requirements.txt"
}
